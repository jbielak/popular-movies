<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/review_author_text_size"
        android:layout_marginTop="@dimen/review_item_margin"/>

    <TextView
        android:id="@+id/text_view_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/review_content_text_size"
        android:layout_below="@id/text_view_review_author"
        android:layout_marginBottom="@dimen/review_item_margin"/>

</RelativeLayout>